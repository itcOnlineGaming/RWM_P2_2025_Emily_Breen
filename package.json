{
	"name": "@rwm/srl-sidebar-monorepo",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"workspaces": [
		"packages/*",
		"demo"
	],
	"scripts": {
		"dev": "npm run dev -w demo",
		"build": "npm run build -w @rwm/srl-sidebar",
		"build:demo": "npm run build -w @rwm/srl-sidebar-demo",
		"test": "npm run test -w @rwm/srl-sidebar",
		"test:e2e": "playwright test",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"install:all": "npm install && npm install -w @rwm/srl-sidebar && npm install -w @rwm/srl-sidebar-demo"
	},
	"devDependencies": {
		"@playwright/test": "^1.56.1",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.47.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@testing-library/svelte": "^5.2.9",
		"@testing-library/user-event": "^14.6.1",
		"@vitest/browser-playwright": "^4.0.5",
		"playwright": "^1.56.1",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.41.0",
		"svelte-check": "^4.3.3",
		"typescript": "^5.9.3",
		"vite": "^7.1.10",
		"vitest": "^4.0.5",
		"vitest-browser-svelte": "^2.0.1"
	}
}
